<%- include("../partials/header.ejs")%>
<div class="container">
	<div class="" >
		<h1 class="text-center">create a new campground</h1>
		<div class="m-0 mx-auto  " style="width:30%;" >
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="camp[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price per night" name="camp[price]" min="1" step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="camp[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="camp[description]">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-info btn-block" type="submit">		
				</div>					
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
		
	</div>
	

	
</div>

<%- include("../partials/footer.ejs")%>
