<%- include("../partials/header.ejs")%>
<div class="container">
	<div class="" >
		<h1 class="text-center">update <%=camp.name%></h1>
		<div class="m-0 mx-auto  " style="width:30%;" >
			<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text"  name="camp[name]" placeholder="name" value="<%=camp.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number"  name="camp[price]" placeholder="price per night" value="<%=camp.price%>" min="1" step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="camp[image]" value="<%=camp.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="camp[description]" value="<%=camp.description%>">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-info btn-block" type="submit" value="update">		
				</div>					
			</form>
			<a href="/campgrounds">update</a>
		</div>
		
	</div>
	

	
</div>

<%- include("../partials/footer.ejs")%>
